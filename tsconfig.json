{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "compilerOptions": {
    "outDir": "bin",
    "baseUrl": "/",
    "target": "es2017",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "amd",
    "moduleResolution": "classic",
    "sourceMap": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  }
}